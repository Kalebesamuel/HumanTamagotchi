<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dots"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    tools:context=".Activities.MainActivity">

    <Button
        android:id="@+id/bt_slideLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/slidePage"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="Anterior"
        android:textColor="@color/colorWhite"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bt_slideRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/slidePage"
        android:layout_alignBottom="@id/slidePage"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="PrÃ³ximo"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/containerDot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/slidePage"
        android:background="#485351"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:visibility="visible">

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/slidePage"
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent">

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>